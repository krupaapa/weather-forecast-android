<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/fb_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Clear in Los Angeles,CA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="68"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/temp_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/temperature"
        android:layout_toRightOf="@+id/temperature"
        android:text="F"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/temp_lowhigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="L:48|H:71"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detail"
        android:layout_alignRight="@+id/fb_icon"
        android:layout_below="@+id/temp_lowhigh"
        android:layout_marginTop="29dp" >

        <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_precipitation"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Precipitation"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/precipitation"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
		
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_rain"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Chance of Rain"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/chance_rain"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_wind"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Wind Speed"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/windspeed"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_dewpoint"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Dew Point"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/dew"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_humidity"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_visibility"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Visibility"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/visibility"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
        
        
         <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_sunrise"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Sunrise"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
       
         
          <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_sunset"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Sunset"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </TableRow>
    </TableLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/fb_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/summary"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/fb_icon" />

    <Button
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_toLeftOf="@+id/image"
        android:text="More Details" />

    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_alignLeft="@+id/temperature"
        android:layout_marginLeft="21dp"
        android:text="View Maps" />
   
</RelativeLayout>